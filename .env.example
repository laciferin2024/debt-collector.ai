# Twilio Configuration
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=
TWILIO_NUMBER=
TWILIO_WEBHOOK_URL=

# Deepgram Configuration
# Get your API key from https://console.deepgram.com/signup
DEEPGRAM_API_KEY=
DEEPGRAM_MODEL=

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini  # You can change to other OpenAI models if needed

# Cartesia Configuration
# Get your API key from https://app.cartesia.ai/
CARTESIA_API_KEY=
